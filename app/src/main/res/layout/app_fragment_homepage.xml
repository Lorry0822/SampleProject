<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.wj.sampleproject.mvvm.HomepageViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/app_colorPrimary"
            android:bind_toolbar_itemClick="@{viewModel.onMenuItemClick}"
            android:theme="@style/app_toolbar"
            app:menu="@menu/app_menu_search"
            app:title="@string/app_homepage" />

        <View style="@style/app_dividing.horizontal" />

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:bind_smart_loadMore="@={viewModel.loadMore}"
            android:bind_smart_onLoadMore="@{viewModel.onLoadMore}"
            android:bind_smart_onRefresh="@{viewModel.onRefresh}"
            android:bind_smart_refreshing="@={viewModel.refreshing}">

            <com.scwang.smartrefresh.layout.header.ClassicsHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/vp_banner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:bind_onTouch="@{viewModel.onBannerTouch}"
                        android:bind_visibility="@{viewModel.showBanner}"
                        android:bind_vp_currentItem="@={viewModel.bannerCurrent}"
                        android:bind_vp_offscreenPageLimit="@{viewModel.bannerLimit}"
                        android:bind_vp_smoothScroll="@{true}"
                        android:visibility="gone"
                        tools:visibility="visible" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_articles"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:bind_rv_isNestedScrollingEnabled="@{false}"
                        tools:listitem="@layout/app_recycler_item_homepage_articles" />

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

            <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    </LinearLayout>

</layout>