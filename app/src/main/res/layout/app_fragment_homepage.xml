<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.wj.sampleproject.mvvm.HomepageViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/app_colorPrimary"
            android:theme="@style/app_toolbar">

            <cn.wj.android.views.custom.DrawableTextView
                android:id="@+id/dtv_search"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/app_selector_search_bg"
                android:bind_onClick="@{viewModel.onSearchClick}"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="@string/app_search"
                app:dtv_drawableEnd="@drawable/app_vector_search_white_24dp"
                app:dtv_drawableEndHeight="24dp"
                app:dtv_drawableEndWidth="24dp" />

        </androidx.appcompat.widget.Toolbar>

        <View style="@style/app_dividing.horizontal" />

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/srl_homepage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:bind_smart_loadMore="@={viewModel.loadMore}"
            android:bind_smart_loadMore_enable="@{viewModel.loadMoreEnable}"
            android:bind_smart_onLoadMore="@{viewModel.onLoadMore}"
            android:bind_smart_onRefresh="@{viewModel.onRefresh}"
            android:bind_smart_refreshing="@={viewModel.refreshing}">

            <com.scwang.smartrefresh.layout.header.ClassicsHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_articles"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/app_recycler_item_homepage_articles" />

            <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    </LinearLayout>

</layout>